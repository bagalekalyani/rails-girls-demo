    <%= f.label :actors %>
    <%= select_tag "actor_team", options_from_collection_for_select(Actor.all, 'id', 'fname',@movie.actors.map{ |j| j.id }), :multiple => true %>
  </div>
  <div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
